{
  "root": true,
  "env": {
    "es2021": true,
    "node": true,
    "commonjs": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "prettier/prettier": "warn",
    "no-unused-vars": ["warn", { "args": "none" }],
    "no-console": "off",
    "curly": "error",
    "eqeqeq": "error",
    "no-throw-literal": "error",
    "semi": ["error", "always"]
  }
}
