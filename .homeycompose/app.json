      "class": "other",
      "capabilities": [
        "onoff"
      ],
      "images": {
        "small": "assets/small.svg",
        "large": "assets/large.svg"
      },
      "name": {
        "en": " Common",
        "fr": " Common"
      },
      "zigbee": {
        "manufacturerName": [
          "Tuya"
        ],
        "productId": [
          "TS0601"
        ],
        "endpoints": {
          "1": {
            "clusters": [
              0,
              6
            ]
          }
        }
      }
    },
    {
      "id": "tuya_plug",
      "title": {
        "en": "Tuya Smart Plug",
        "fr": "Prise intelligente Tuya"
      },
      "class": "socket",
      "capabilities": ["onoff", "measure_power"],
      "images": {
        "small": "drivers/tuya_plug/assets/small.svg",
        "large": "drivers/tuya_plug/assets/large.svg"
      },
      "zigbee": {
        "manufacturerName": ["Tuya"],
        "productId": ["TS011F", "TS0121"]
      }
    },
    {
      "id": "tuya_sensor",
      "title": {
        "en": "Tuya Sensor",
        "fr": "Capteur Tuya"
      },
      "class": "sensor",
      "capabilities": ["measure_temperature", "measure_humidity"],
      "images": {
        "small": "drivers/tuya_sensor/assets/small.svg",
        "large": "drivers/tuya_sensor/assets/large.svg"
      },
      "zigbee": {
        "manufacturerName": ["Tuya"],
        "productId": ["RH3052", "TS0201"]
      }
