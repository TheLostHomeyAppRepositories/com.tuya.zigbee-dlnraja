{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "outDir": ".homeybuild",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "@drivers/*": ["src/drivers/*"],
      "@devices/*": ["src/devices/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@config": ["src/config"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@homey"
    ],
    "types": [
      "node",
      "@homey/homey-app"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".homey*",
    "dist"
  ]
}
