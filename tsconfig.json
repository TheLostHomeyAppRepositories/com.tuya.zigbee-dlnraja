{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2020",
    "lib": ["es2020"],
    
    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    
    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false, // Disabled to allow unused parameters in callbacks
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    
    /* Emit */
    "sourceMap": true,
    "outDir": ".homeybuild",
    
    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@app/*": ["app/*"],
      "@drivers/*": ["drivers/*"],
      "@lib/*": ["lib/*"],
      "@utils/*": ["lib/utils/*"],
      "@config": ["lib/config.js"],
      "@test/*": ["test/*"]
    },
    
    /* Linting */
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "rootDir": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@homey"
    ],
    "types": [
      "node",
      "@homey/homey-app"
    ]
  },
  "include": [
    "app.js",
    "app.json",
    "drivers/**/*.js",
    "drivers/**/*.ts",
    "lib/**/*.js",
    "lib/**/*.ts",
    "test/**/*.js",
    "test/**/*.ts",
    ".homeycompose/**/*.json"
  ],
  "exclude": [
    "node_modules",
    ".homey*",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.d.ts",
    "**/node_modules/**"
  ]
}
