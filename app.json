{
  "id": "com.tuya.zigbee",
  "version": "0.0.2",
  "compatibility": ">=3.2.0",
  "sdk": 2,
  "name": {
    "en": "Tuya Zigbee"
  },
  "description": {
    "en": "Adds support for Tuya Zigbee devices"
  },
  "tags": {
    "en": [
      "Tuya",
      "Zigbee",
      "Sensor",
      "Temperature"
    ]
  },
  "category": [
    "appliances",
    "security"
  ],
  "brandColor": "#FF4800",
  "permissions": [
    "homey:wireless:zigbee"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Johan Bendz",
    "email": "johan_bendz@hotmail.com"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "JohanBendz"
      }
    }
  },
  "drivers": [
    {
      "id": "lcdtemphumidsensor",
      "name": {
        "en": "LCD Temperature & Humidity Sensor (ZigBee)"
      },
      "class": "sensor",
      "capabilities": [
        "measure_temperature",
        "measure_humidity",
        "measure_battery",
        "alarm_battery"
      ],
      "energy": {
        "batteries": [
          "AAA",
          "AAA"
        ]
      },
      "images": {
        "large": "drivers/lcdtemphumidsensor/assets/images/large.png",
        "small": "drivers/lcdtemphumidsensor/assets/images/small.png"
      },
      "zigbee": {
        "manufacturerName": [
          "_TZ2000_a476raq2"
        ],
        "productId": [
          "TS0201"
        ],
        "deviceId": 770,
        "profileId": 260,
        "learnmode": {
          "image": "drivers/lcdtemphumidsensor/assets/learn.svg",
          "instruction": {
            "en": "Insert a pin into the single hole on the side of the device and press it gently for aprox 10 seconds until the LED blinks rapidly."
          }
        }
      },
      "settings": [
        {
          "id": "temperature_offset",
          "type": "number",
          "label": {
            "en": "Temperature offset (°C)"
          },
          "hint": {
            "en": "Set a value to compensate a temperature offset.\nRange: -10 - 10, step size 0.1, \ndefault: 0 [°C]"
          },
          "value": 0,
          "attr": {
            "min": -10,
            "max": 10,
            "step": 0.1
          }
        },
        {
          "id": "temperature_decimals",
          "type": "radio",
          "label": {
            "en": "Temperature reporting decimals"
          },
          "value": "1",
          "values": [
            {
              "id": "1",
              "label": {
                "en": "Report temperature value with 1 decimal (21.4 °C)"
              }
            },
            {
              "id": "2",
              "label": {
                "en": "Report temperature value with 2 decimals (21.37 °C)"
              }
            }
          ]
        },
        {
          "id": "humidity_decimals",
          "type": "radio",
          "label": {
            "en": "Humidity reporting"
          },
          "value": "1",
          "values": [
            {
              "id": "1",
              "label": {
                "en": "Report humidity value with 1 decimal (35.2 %)"
              }
            },
            {
              "id": "2",
              "label": {
                "en": "Report humidity value with 2 decimals (35.19 %)"
              }
            }
          ]
        },
        {
          "id": "battery_threshold",
          "type": "number",
          "label": {
            "en": "Battery alarm threshold (%)"
          },
          "hint": {
            "en": "Battery level (%) below which the battery alarm will be activated.\nRange: 1 - 90, \ndefault: 20 [%]"
          },
          "value": 20,
          "attr": {
            "min": 1,
            "max": 90
          }
        }
      ]
    },
    {
      "id": "temphumidsensor",
      "name": {
        "en": "Temperature & Humidity Sensor (ZigBee)"
      },
      "class": "sensor",
      "capabilities": [
        "measure_temperature",
        "measure_humidity",
        "measure_battery",
        "alarm_battery"
      ],
      "energy": {
        "batteries": [
          "CR2032"
        ]
      },
      "images": {
        "large": "drivers/temphumidsensor/assets/images/large.png",
        "small": "drivers/temphumidsensor/assets/images/small.png"
      },
      "zigbee": {
        "manufacturerName": [
          "TUYATEC-g3gl6cgy",
          "TUYATEC-Bfq2i2Sy"
        ],
        "productId": [
          "RH3052"
        ],
        "deviceId": 770,
        "profileId": 260,
        "learnmode": {
          "image": "drivers/temphumidsensor/assets/learn.svg",
          "instruction": {
            "en": "Insert a pin into the single hole on the side of the device and press it gently for aprox 10 seconds until the LED blinks rapidly."
          }
        }
      },
      "settings": [
        {
          "id": "temperature_offset",
          "type": "number",
          "label": {
            "en": "Temperature offset (°C)"
          },
          "hint": {
            "en": "Set a value to compensate a temperature offset.\nRange: -10 - 10, step size 0.1, \ndefault: 0 [°C]"
          },
          "value": 0,
          "attr": {
            "min": -10,
            "max": 10,
            "step": 0.1
          }
        },
        {
          "id": "temperature_decimals",
          "type": "radio",
          "label": {
            "en": "Temperature reporting decimals"
          },
          "value": "1",
          "values": [
            {
              "id": "1",
              "label": {
                "en": "Report temperature value with 1 decimal (21.4 °C)"
              }
            },
            {
              "id": "2",
              "label": {
                "en": "Report temperature value with 2 decimals (21.37 °C)"
              }
            }
          ]
        },
        {
          "id": "humidity_decimals",
          "type": "radio",
          "label": {
            "en": "Humidity reporting"
          },
          "value": "1",
          "values": [
            {
              "id": "1",
              "label": {
                "en": "Report humidity value with 1 decimal (35.2 %)"
              }
            },
            {
              "id": "2",
              "label": {
                "en": "Report humidity value with 2 decimals (35.19 %)"
              }
            }
          ]
        },
        {
          "id": "battery_threshold",
          "type": "number",
          "label": {
            "en": "Battery alarm threshold (%)"
          },
          "hint": {
            "en": "Battery level (%) below which the battery alarm will be activated.\nRange: 1 - 90, \ndefault: 20 [%]"
          },
          "value": 20,
          "attr": {
            "min": 1,
            "max": 90
          }
        }
      ]
    }
  ]
}