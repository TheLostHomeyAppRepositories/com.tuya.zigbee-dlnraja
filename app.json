        "nl": "Tuya Zigbee Alleen",
        "ta": "Tuya Zigbee மட்டும்"
      },
      "images": {
        "small": "assets/images/small.png",
        "large": "assets/images/large.png"
      },
      "class": "driver",
      "capabilities": [
        "onoff",
        "dim",
        "light_hue",
        "light_saturation",
        "light_temperature",
        "measure_power",
        "measure_temperature",
        "measure_humidity",
        "alarm_motion",
        "alarm_contact",
        "lock_set",
        "lock_get",
        "camera_stream",
        "speaker_volume",
        "vacuum_start",
        "garage_door_set",
        "valve_set"
      ],
      "capabilitiesOptions": {
        "onoff": {
          "title": {
            "en": "On/Off",
            "fr": "Marche/Arrêt",
            "nl": "Aan/Uit",
            "ta": "இயக்கு/நிறுத்து"
          }
        },
        "dim": {
          "title": {
            "en": "Dim",
            "fr": "Variation",
            "nl": "Dimmen",
            "ta": "மங்கலாக்கு"
          }
