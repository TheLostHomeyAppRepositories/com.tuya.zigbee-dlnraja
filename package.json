{
  "name": "universal-tuya-zigbee",
  "version": "0.0.1",
  "description": "Universal Tuya Zigbee devices support for Homey",
  "main": "app.js",
  "scripts": {
    "format": "prettier -w .",
    "lint": "eslint . --ext .js",
    "validate:fast": "homey app validate -l debug",
    "compose:on": "node tools/enable-compose.js",
    "json:bom": "node tools/strip-bom.js",
    "json:lint": "node tools/lint-json.js",
    "json:clean": "node tools/clean-json-only.js",
    "check:drivers": "node tools/check-drivers.js",
    "matrix": "node tools/matrix-build.js && node tools/build-references.js",
    "dashboard": "node tools/build-dashboard.js",
    "enrich:heur": "node tools/enrich-heuristics.js",
    "enrich:evidence": "node tools/enrich-from-evidence.js",
    "orchestrate": "node tools/orchestrate.js",
    "orchestrate:simple": "node tools/orchestrate-simple.js",
    "enrich:auto": "node tools/auto-driver-enricher.js",
    "scrape:web": "node tools/web-scraper.js",
    "orchestrate:mega": "node tools/orchestrate.js && node tools/auto-driver-enricher.js",
    "dump:homey": "node tools/dump.js",
    "dump:homey:fast": "node tools/dump.js 60",
    "validate:final": "node tools/final-validation.js",
    "fix:validation": "node tools/fix-validation-issues.js"
  },
  "keywords": [
    "tuya",
    "zigbee",
    "homey",
    "smart-home",
    "automation"
  ],
  "author": "Tuya Community",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^9.9.0",
    "glob": "^11.0.0",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "homey": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
