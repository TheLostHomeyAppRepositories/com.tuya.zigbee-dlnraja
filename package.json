{
  "name": "com.tuya.zigbee",
  "version": "1.1.0",
  "description": "Universal Tuya Zigbee Device App - Support for all Tuya Zigbee devices",
  "main": "app.js",
  "dependencies": {
    "homey": "^2.0.0"
  },
  "devDependencies": {
    "homey-cli": "^1.0.0"
  },
  "scripts": {
    "run": "homey app run",
    "run:debug": "homey app run --debug",
    "build": "homey app build",
    "publish": "homey app publish",
    "test": "mocha test/**/*.test.js",
    "install": "homey app install",
    "lint": "eslint src/ scripts/",
    "lint:fix": "eslint src/ scripts/ --fix",
    "format": "prettier --write src/ scripts/",
    "test:coverage": "nyc mocha test/**/*.test.js",
    "test:watch": "mocha test/**/*.test.js --watch",
    "test:report": "nyc report --reporter=html",
    "validate": "homey app validate",
