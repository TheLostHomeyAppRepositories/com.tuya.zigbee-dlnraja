{
  "name": "com.tuya.zigbee",
  "version": "2.1.0",
  "description": "Universal Tuya Zigbee Device Integration for Homey",
  "main": "app.js",
  "keywords": [
    "homey",
    "zigbee",
    "tuya",
    "smart home",
    "iot"
  ],
  "author": "Tuya Zigbee Team",
  "contributors": [
    {
      "name": "Community Contributors",
      "email": "community@homey.app"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dlnraja/com.tuya.zigbee"
  },
  "bugs": {
    "url": "https://github.com/dlnraja/com.tuya.zigbee/issues"
  },
  "homepage": "https://dlnraja.github.io/com.tuya.zigbee",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "test": "mocha",
    "test:watch": "mocha --watch",
    "test:coverage": "nyc mocha",
    "test:ci": "mocha --reporter mocha-junit-reporter --reporter-options mochaFile=./test-results.xml",
    "test:simulate": "node scripts/simulate-device.js",
    "validate": "node scripts/enhanced-validate.js",
    "validate:legacy": "node scripts/validate-and-fix.js",
    "validate:z2m": "node scripts/validate-z2m-compatibility.js",
    "fix": "node scripts/fix-common-issues.js",
    "verify": "node scripts/verify-zigbee-drivers.js",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "start": "homey app run",
    "build": "homey app build",
    "publish": "homey app publish",
    "precommit": "npm run lint && npm test",
    "fetch-sources": "node scripts/fetch-all-sources.js",
    "build-matrices": "node scripts/build-matrices.js",
    "repair": "node scripts/repair-json.js",
    "check-env": "node scripts/check-environment.js",
    "generate-docs": "node scripts/generate-docs.js",
    "release": "npm run fetch-sources && npm run repair && npm run validate && npm test && npm run build-matrices && homey app validate"
  },
  "dependencies": {
    "homey-zigbeedriver": "^2.0.0",
    "natural": "^8.1.0",
    "zigbee-clusters": "^2.0.0"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "jsonschema": "^1.4.1",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "sinon": "^17.0.0"
  }
}
