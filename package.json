{
  "name": "com.tuya.zigbee",
  "version": "3.3.0",
  "description": "Universal Tuya Zigbee - Full-featured Homey app for Tuya Zigbee devices",
  "main": "app.js",
  "scripts": {
    "build": "homey app build",
    "build:publish": "homey app build --publish",
    "install": "homey app install",
    "uninstall": "homey app uninstall",
    "run": "homey app run",
    "test": "jest",
    "test:integration": "jest --config jest.integration.config.js",
    "test:drivers": "jest --config jest.drivers.config.js",
    "lint": "eslint .",
    "lint:js": "eslint . --ext .js",
    "lint:fix": "eslint . --fix",
    "validate": "npm run validate:all",
    "validate:all": "npm run validate:pre-build && npm run validate:build && npm run validate:post-build",
    "validate:pre-build": "node scripts/validate-pre-build.js",
    "validate:build": "node scripts/validate-build.js",
    "validate:post-build": "node scripts/validate-post-build.js",
    "validate:json": "node scripts/validate-json.js",
    "validate:images": "node scripts/validate-images.js",
    "validate:links": "node scripts/validate-links.js",
    "validate:app-json": "node scripts/validate-app-json.js",
    "validate:drivers": "node scripts/validate-drivers.js",
    "validate:matrix": "node scripts/validate-matrix.js",
    "validate:matrix-coherence": "node scripts/validate-matrix-coherence.js",
    "validate:enriched": "node scripts/validate-enriched.js",
    "validate:lite-drivers": "node scripts/validate-lite-drivers.js",
    "validate:readme-langs": "node scripts/validate-readme-langs.js",
    "validate:doc-links": "node scripts/validate-doc-links.js",
    "homey:validate": "homey app validate",
    "analyze": "npm run analyze:all",
    "analyze:all": "npm run analyze:current-state && npm run analyze:lite-compatibility",
    "analyze:current-state": "node scripts/analyze-current-state.js",
    "analyze:lite-compatibility": "node scripts/analyze-lite-compatibility.js",
    "scrape": "npm run scrape:all",
    "scrape:all": "npm run scrape:blakadder && npm run scrape:zigbee2mqtt && npm run scrape:tuya-official && npm run scrape:community",
    "scrape:blakadder": "node scripts/scrape-blakadder.js",
    "scrape:zigbee2mqtt": "node scripts/scrape-zigbee2mqtt.js",
    "scrape:tuya-official": "node scripts/scrape-tuya-official.js",
    "scrape:community": "node scripts/scrape-community.js",
    "enrich": "npm run enrich:all",
    "enrich:all": "npm run enrich:merge && npm run generate:drivers && npm run update:driver-matrix",
    "enrich:merge": "node scripts/enrich-merge.js",
    "generate": "npm run generate:all",
    "generate:all": "npm run generate:drivers && npm run generate:lite-drivers",
    "generate:drivers": "node scripts/generate-drivers.js",
    "generate:lite-drivers": "node scripts/generate-lite-drivers.js",
    "update": "npm run update:all",
    "update:all": "npm run update:driver-matrix && npm run update:dashboard && npm run update:app-json",
    "update:driver-matrix": "node scripts/update-driver-matrix.js",
    "update:dashboard": "node scripts/update-dashboard.js",
    "update:app-json": "node scripts/update-app-json.js",
    "update:lite-metrics": "node scripts/update-lite-metrics.js",
    "update:sync-metrics": "node scripts/update-sync-metrics.js",
    "update:dependency-metrics": "node scripts/update-dependency-metrics.js",
    "update:release-metrics": "node scripts/update-release-metrics.js",
    "prepare": "npm run prepare:all",
    "prepare:all": "npm run prepare:lite-repo",
    "prepare:lite-repo": "node scripts/prepare-lite-repo.js",
    "report": "npm run report:all",
    "report:all": "npm run report:validation && npm run report:enrichment && npm run report:build && npm run report:test && npm run report:publish && npm run report:matrix-stats && npm run report:enrichment && npm run report:documentation && npm run report:security && npm run report:build && npm run report:test && npm run report:publish && npm run report:matrix-stats",
    "report:validation": "node scripts/report-validation.js",
    "report:enrichment": "node scripts/report-enrichment.js",
    "report:build": "node scripts/report-build.js",
    "report:test": "node scripts/report-test.js",
    "report:publish": "node scripts/report-publish.js",
    "report:matrix-stats": "node scripts/report-matrix-stats.js",
    "report:documentation": "node scripts/report-documentation.js",
    "report:security": "node scripts/report-security.js",
    "report:dependency-updates": "node scripts/report-dependency-updates.js",
    "report:post-update": "node scripts/report-post-update.js",
    "cleanup": "npm run cleanup:all",
    "cleanup:all": "npm run cleanup:temp && npm run cleanup:lite-temp",
    "cleanup:temp": "node scripts/cleanup-temp.js",
    "cleanup:lite-temp": "node scripts/cleanup-lite-temp.js",
    "start": "homey app run",
    "dev": "homey app run",
    "debug": "homey app run --debug",
    "deploy": "homey app install",
    "publish": "homey app publish",
    "version": "node scripts/version.js",
    "changelog": "node scripts/generate-changelog.js",
    "docs": "node scripts/generate-docs.js",
    "assets": "node scripts/generate-assets.js",
    "matrix": "node scripts/generate-driver-matrix.js",
    "dashboard": "node scripts/update-dashboard.js"
  },
  "keywords": [
    "homey",
    "tuya",
    "zigbee",
    "smart-home",
    "iot",
    "automation",
    "drivers",
    "sensors",
    "switches",
    "lights",
    "covers",
    "thermostats"
  ],
  "author": {
    "name": "dlnraja",
    "email": "dylan.rajasekaram+homey@gmail.com",
    "url": "https://github.com/dlnraja"
  },
  "license": "MIT",
  "homepage": "https://github.com/dlnraja/com.tuya.zigbee#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/dlnraja/com.tuya.zigbee.git"
  },
  "bugs": {
    "url": "https://github.com/dlnraja/com.tuya.zigbee/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "homey": ">=5.0.0"
  },
  "dependencies": {
    "homey": "^2.0.0",
    "homey-meshdriver": "^1.3.0",
    "homey-zigbee": "^1.0.0",
    "zigbee-herdsman": "^0.18.0",
    "zigbee-herdsman-converters": "^15.0.0",
    "tuya-api": "^1.0.0",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0",
    "puppeteer": "^21.0.0",
    "jsdom": "^23.0.0",
    "csv-parser": "^3.0.0",
    "xml2js": "^0.6.0",
    "yaml": "^2.3.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.0",
    "ora": "^7.0.1",
    "progress": "^2.0.3",
    "table": "^6.8.1",
    "boxen": "^7.1.0",
    "figlet": "^1.6.0",
    "gradient-string": "^2.0.2",
    "terminal-link": "^3.0.0",
    "update-notifier": "^6.0.0"
  },
  "devDependencies": {
    "@homey/cli": "^3.0.0",
    "@types/node": "^20.0.0",
    "@types/lodash": "^4.14.0",
    "@types/moment": "^2.13.0",
    "@types/inquirer": "^9.0.0",
    "@types/progress": "^2.0.0",
    "@types/figlet": "^1.5.0",
    "eslint": "^8.55.0",
    "eslint-config-homey": "^1.0.0",
    "eslint-plugin-homey": "^1.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "conventional-changelog-cli": "^4.1.0",
    "npm-check-updates": "^16.10.0",
    "rimraf": "^5.0.0",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0",
    "copy-webpack-plugin": "^11.0.0",
    "html-webpack-plugin": "^5.5.0",
    "css-loader": "^6.8.0",
    "style-loader": "^3.3.0",
    "file-loader": "^6.2.0",
    "url-loader": "^4.1.0"
  },
  "peerDependencies": {
    "homey": ">=5.0.0"
  },
  "optionalDependencies": {
    "puppeteer-extra": "^3.3.0",
    "puppeteer-extra-plugin-stealth": "^2.11.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "files": [
    "app.js",
    "app.json",
    "drivers/",
    "lib/",
    "assets/",
    "locales/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "directories": {
    "lib": "lib",
    "test": "tests",
    "docs": "docs",
    "scripts": "scripts",
    "assets": "assets"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitizen"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "lib/**/*.js",
      "drivers/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "homey",
      "eslint:recommended"
    ],
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-debugger": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}
