{
  "name": "homey-tuya-zigbee",
  "version": "3.4.0",
  "description": "Universal Tuya Zigbee device support for Homey",
  "main": "app.js",
  "scripts": {
    "start": "homey app run",
    "validate": "homey app validate",
    "test": "node scripts/test-generation-pipeline.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "scrape": "node scripts/scrape/fetch_blakadder.mjs",
    "build:drivers": "node scripts/build/generate_from_catalog.mjs",
    "build:merge": "node scripts/build/merge_driver_compose.mjs",
    "validate:all": "npm run validate && npm run build:drivers",
    "export:dashboard": "node scripts/build/export_dashboard_data.mjs",
    "generate:images": "echo \"Image generation script placeholder\"",
    "ci:validate": "npm run validate:all",
    "ci:enrich": "npm run scrape && npm run build:drivers",
    "ci:pages": "npm run export:dashboard",
    "test:pipeline": "node scripts/test-generation-pipeline.js",
    "report:test": "node scripts/generate-test-report.js",
    "quality:check": "node scripts/quality-gates.js",
    "dashboard:build": "node scripts/build-dashboard.js",
    "deployment:report": "node scripts/generate-deployment-report.js"
  },
  "keywords": [
    "homey",
    "tuya",
    "zigbee",
    "smart-home",
    "iot"
  ],
  "author": "dlnraja <dylan.rajasekaram+homey@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/dlnraja/homey-tuya-zigbee#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dlnraja/homey-tuya-zigbee.git"
  },
  "bugs": {
    "url": "https://github.com/dlnraja/homey-tuya-zigbee/issues"
  },
  "dependencies": {
    "homey-meshdriver": "^1.3.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0",
    "node-fetch": "^3.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "homey": ">=5.0.0"
  },
  "homey": {
    "sdk": 3,
    "compatibility": ">=5.0.0"
  }
}
