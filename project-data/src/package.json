{
  "name": "homey-app-tuya-zigbee",
  "version": "1.0.0",
  "description": "Tuya Zigbee device support for Homey",
  "private": true,
  "homey": {
    "requirements": {
      "sdk": "^3.0.0"
    },
    "id": "com.tuya.zigbee",
    "minHomeyVersion": "7.0.0"
  },
  "dependencies": {
    "homey": "^8.0.0",
    "homey-zw-lib": "^1.0.0",
    "axios": "^1.6.7",
    "homey-log": "^2.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/eslint-parser": "^7.23.3",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-typescript": "^7.23.3",
    "@types/chai": "^4.3.11",
    "@types/jest": "^29.5.11",
    "@types/mocha": "^10.0.8",
    "@types/node": "^20.10.3",
    "@types/uuid": "^9.0.7",
    "babel-jest": "^29.7.0",
    "chai": "^4.4.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "scripts": {
    "test": "mocha -r ts-node/register -r tsconfig-paths/register test*.test.ts",
    "test:watch": "mocha -w -r ts-node/register -r tsconfig-paths/register test*.test.ts",
    "test:integration": "mocha -r ts-node/register -r tsconfig-paths/register test/integration*.test.ts",
    "test:e2e": "mocha -r ts-node/register -r tsconfig-paths/register test/e2e*.test.ts",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "type-check": "tsc --noEmit",
    "start": "homey app run",
    "build": "homey app build",
    "validate": "homey app validate",
    "migrate": "node scripts/migrate.js",
    "clean": "rimraf dist && rimraf node_modules/.cache"
  }
}
